<idea-plugin>
    <id>me.waleedyaseen.runescript-plugin</id>
    <name>RuneScript</name>
    <description><![CDATA[
    RuneScript is a plugin that adds support to the RuneScript language to IntelliJ.
]]></description>
    <vendor></vendor>
    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition language="RuneScript"
                               implementationClass="io.runescript.plugin.lang.parser.RuneScriptParserDefinition"/>
        <fileType name="ClientScript" language="RuneScript"
                  implementationClass="io.runescript.plugin.ide.filetypes.Cs2FileType" fieldName="INSTANCE"
                  extensions="cs2"/>
        <moduleBuilder builderClass="io.runescript.plugin.ide.projectWizard.RsModuleBuilder"/>
        <projectConfigurable
                groupId="language"
                id="runescript.languageSettings"
                displayName="RuneScript"
                instance="io.runescript.plugin.ide.configurable.RsLanguageSettings"/>
        <lang.syntaxHighlighterFactory language="RuneScript" implementationClass="io.runescript.plugin.ide.highlight.RsSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="io.runescript.plugin.ide.highlight.RsColorSettingsPage"/>
        <annotator language="RuneScript" implementationClass="io.runescript.plugin.ide.highlight.RsHighlightingAnnotator"/>
        <internalFileTemplate name="ClientScript"/>
        <lang.foldingBuilder language="RuneScript" implementationClass="io.runescript.plugin.ide.folding.RsFoldingBuilder"/>
        <psi.referenceContributor language="RuneScript" implementation="io.runescript.plugin.lang.psi.refs.RuneScriptReferenceContributor"/>
        <lang.findUsagesProvider language="RuneScript" implementationClass="io.runescript.plugin.lang.psi.refs.RuneScriptFindUsagesProvider"/>
        <lang.quoteHandler language="RuneScript" implementationClass="io.runescript.plugin.ide.RsQuoteHandler"/>
        <lang.braceMatcher language="RuneScript" implementationClass="io.runescript.plugin.ide.RsBraceMatcher"/>
    </extensions>
    <actions>
        <action id="RuneScript.NewFile" class="io.runescript.plugin.ide.actions.RsNewFileAction">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>